<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/places_autocomplete_list_background"
    android:orientation="vertical"
    tools:context=".ResultadoActivity">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tl_Ruta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/places_autocomplete_fullscreen_background">

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tab_Mapa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mapa_string" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tab_Ruta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ruta_string" />

    </com.google.android.material.tabs.TabLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/places_autocomplete_fullscreen_background">

    </androidx.viewpager.widget.ViewPager>

</LinearLayout>